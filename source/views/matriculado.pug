html
  include head.pug
  each dato in datos
    title= dato.matricula
  body
    nav(class="navbar navbar-expand-lg navbar-dark bg-primary")
      a(class="navbar-brand copitec" href="https://www.copitec.org.ar") COPITEC
    div(class="row justify-content-md-center tarjetas")
      each dato in datos
        if dato.estado == 1
          div(class="col-md-auto")
          div(class="card text-white bg-success mb-3 tarjetaSuccess" style="max-width: 20rem;")
            div(class="card-body")
              h4(class="card-title")= dato.apellido
              h4(class="card-title")= dato.matricula
              hr
              p(class="card-text") Titulo:  #{dato.titulo}
              p(class="card-text") Estado: Habilitado
              p(class="card-text") Fecha de alta: #{dato.fechamat}
              p(class="card-text") Institucion: #{dato.institucion}
        else if dato.estado == 2
          div(class="col-md-auto")
          div(class="card text-white bg-danger mb-3 tarjetaDanger" style="max-width: 20rem;")
            div(class="card-body")
              h4(class="card-title")= dato.apellido
              h4(class="card-title")= dato.matricula
              hr

              p(class="card-text") Titulo:  #{dato.titulo}
              p(class="card-text") Estado: Inhabilitado
              p(class="card-text") Fecha de alta: #{dato.fechamat}
        else
          div(class="col-md-auto")
          div(class="card text-white bg-warning mb-3 tarjetaWarning" style="max-width: 20rem;")
            div(class="card-body")
              h4(class="card-title")= dato.apellido
              h4(class="card-title")= dato.matricula
              hr
              p(class="card-text") Titulo:  #{dato.titulo}
              p(class="card-text") Estado: Desconocido
              p(class="card-text") Fecha de alta: #{dato.fechamat}
